root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Why:
#	keeps indentation consistent (spaces, 4 wide).
#	ensures no accidental trailing whitespace.
#	markdown keeps long lines and trailing spaces (for line breaks).